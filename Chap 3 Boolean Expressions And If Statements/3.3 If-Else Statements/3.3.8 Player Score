import java.util.Scanner;

public class Basketball
{
    public static void main(String[] args)
    {
        Scanner input = new Scanner(System.in);

        // Start by listing the steps you need to take
        System.out.println("Enter player one's name: ");
        String player1 = input.nextLine();

        System.out.println("Enter player two's name: ");
        String player2 = input.nextLine();


        System.out.println("Enter " + player1 + "'s name: ");
        int player1Data = input.nextInt();
        
        System.out.println("Enter " + player2 + "'s name: ");
        int player2Data = input.nextInt();

        if (player1.compareTo(player2) > 0) {
            System.out.println(player2 + " scored " + player2Data + " points");
            System.out.println(player1 + " scored " + player1Data + " points");
        } else {
            System.out.println(player1 + " scored " + player1Data + " points");
            System.out.println(player2 + " scored " + player2Data + " points");
        }

        if (player2Data > player1Data) {
            System.out.println(player2 + " wins!");
        } else {
            System.out.println(player1 + " wins!");
        }


    }
}
